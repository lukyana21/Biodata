<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/judul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Input Biodata"
        android:textAlignment="center"
        android:textSize="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="#557B83"/>

    <TextView
        android:id="@+id/teksNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/judul"
        android:layout_marginTop="25dp"
        android:layout_marginStart="10dp"
        android:textColor="#C3E5AE"/>

    <EditText
        android:id="@+id/nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Input Nama"
        app:layout_constraintStart_toStartOf="@id/teksNama"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/teksNama"
        android:background="#F1E1A6"
        android:textColor="#5F7161"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/teksUmur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Umur"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nama"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:textColor="#C3E5AE"/>

    <EditText
        android:id="@+id/umur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Input Umur"
        app:layout_constraintStart_toStartOf="@id/teksUmur"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/teksUmur"
        android:background="#F1E1A6"
        android:textColor="#5F7161"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/teksAlamat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alamat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/umur"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:textColor="#C3E5AE"/>

    <EditText
        android:id="@+id/alamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Input Alamat"
        app:layout_constraintStart_toStartOf="@id/teksAlamat"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/teksAlamat"
        android:background="#F1E1A6"
        android:textColor="#5F7161"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/teksEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/alamat"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:textColor="#C3E5AE"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Input Email"
        app:layout_constraintStart_toStartOf="@id/teksEmail"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/teksEmail"
        android:background="#F1E1A6"
        android:textColor="#5F7161"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/teksAgama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agama"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/email"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:textColor="#C3E5AE"/>

    <EditText
        android:id="@+id/agama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Input Agama"
        app:layout_constraintStart_toStartOf="@id/teksAgama"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/teksAgama"
        android:background="#F1E1A6"
        android:textColor="#5F7161"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/agama"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/valid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/submit"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        tools:text="Error"
        android:textStyle="bold"
        android:textSize="15dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>